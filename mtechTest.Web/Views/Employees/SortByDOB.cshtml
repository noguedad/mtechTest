@model IEnumerable<mtechTest.Employee>

@{
    ViewBag.Title = "SortByDOB";
}

<h2>Sort by Date of Birth</h2>

<p>
    @Html.ActionLink("Return to List", "Index")
    @using (Html.BeginForm("SortByDOB", "Employees", FormMethod.Get))
    {
    <p>
        Filter by Name: @Html.TextBox("searchName") <input type="submit" value="Filter" /> |
        @Html.ActionLink("Clear filter", "SortByDOB")
    </p>
}
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BornDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RFC)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BornDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RFC)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
            </tr>
        }

    </table>
